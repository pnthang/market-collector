# Example environment variables for Market Collector (PostgreSQL)
# Copy to `.env` and update values before running.

# Option A: provide full DATABASE_URL directly
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/market

# Option B: provide individual DB connection variables (the app will compose DATABASE_URL)
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=market

# Market timezone
MARKET_TZ=Asia/Ho_Chi_Minh

# Snapshot interval in seconds
SNAPSHOT_INTERVAL=15

# Dry run (no DB writes)
# DRY_RUN=false

# SQLAlchemy pool tuning
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
